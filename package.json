{
  "name": "react-babel-rollup-koa-seed",
  "version": "1.0.0",
  "description": "Seed project for end-to-end web apps that use a Koa based API and a React based UI",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "core-js": "^3.1.3",
    "koa": "^2.4.1",
    "koa-static": "^4.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.2",
    "chai": "^4.1.2",
    "chokidar": "^2.0.0",
    "concurrently": "github:pgraham/concurrently",
    "dirty-chai": "^2.0.1",
    "mkdirp": "^0.5.1",
    "mocha": "^5.0.0",
    "ncp": "^2.0.0",
    "nodemon": "^1.14.8",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "prettier-standard": "^8.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "react-test-renderer": "^16.2.0",
    "redux": "^3.7.2",
    "rimraf": "^2.6.2",
    "rollup": "^1.13.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-uglify": "^6.0.2",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "snazzy": "^7.0.0",
    "source-map-support": "^0.5.1",
    "standard": "^12.0.1",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "ws": "^4.0.0"
  },
  "scripts": {
    "start": "concurrently --default-input-target srv -c blue,magenta,cyan npm:watch:*",
    "watch:srv": "nodemon src/srv/main.js",
    "watch:css": "postcss src/web/css/bundle.css -c postcss.config.js -o src/web/styles.css --watch --poll",
    "watch:js": "rollup -c rollup.js -w",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint src/web/css/*.css",
    "lint:js": "standard --verbose | snazzy",
    "test": "npm run lint && npm run test:srv && npm run test:web",
    "test:srv": "NODE_PATH=src/srv mocha -r ./spec/setup.js 'spec/srv/**/*.spec.js'",
    "test:web": "npm run test:web:compile && npm run test:web:run",
    "test:web:run": "NODE_PATH=build/test/web mocha -r source-map-support/register -r ./spec/setup.js 'build/test/spec/**/*.spec.js'",
    "test:web:compile": "npm run test:clean && npm run test:compile-src && npm run test:compile-spec",
    "test:clean": "rimraf build/test",
    "test:compile-src": "BABEL_ENV=test babel src/web/js --out-dir build/test/web",
    "test:compile-spec": "BABEL_ENV=test babel spec/web --out-dir build/test/spec",
    "stage": "npm run compile && npm version patch && npm run assemble:stage",
    "release": "npm run compile && npm run assemble:prod",
    "compile": "npm run lint && npm run compile:css && npm run compile:js",
    "compile:css": "postcss src/web/css/bundle.css -c postcss.config.js -o src/web/styles.css",
    "compile:js": "NODE_ENV=production rollup -c rollup.js",
    "assemble:stage": "tools/assemble -- staging",
    "assemble:prod": "tools/assemble -- production",
    "deploy:prod": "tools/deploy -- production",
    "deploy:stage": "tools/deploy -- staging"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pgraham/react-babel-rollup-koa-seed.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pgraham/react-babel-rollup-koa-seed/issues"
  },
  "homepage": "https://github.com/pgraham/react-babel-rollup-koa-seed#readme"
}
